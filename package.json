{
	"name": "root",
	"private": false,
	"scripts": {
		"build": "turbo run build"
	},
	"devDependencies": {
		"eslint": "^8.12.0",
		"eslint-config-react-app": "^7.0.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"husky": "^7.0.4",
		"lerna": "^4.0.0",
		"lint-staged": "^12.3.7",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"turbo": "^1.1.10"
	},
	"packageManager": "npm@6.14.16",
	"workspaces": [
		"packages/*"
	],
	"prettier": {
		"tabWidth": 2,
		"printWidth": 100,
		"useTabs": true,
		"semi": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged && lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": "eslint --quiet --fix --cache"
	}
}
